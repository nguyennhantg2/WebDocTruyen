@model WebDocTruyen.Models.USER

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-bottom: 50px;">
    <div class="row">
        <div class="col">
            <ul class="list-inline" style="padding-top:15px;">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li><i class="fa fa-angle-double-right" aria-hidden="true"></i></li>
                <li>@Html.ActionLink("Đăng ký", "Register", "Home")</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-lg-3 col-sm-0"></div>
        <div class="col-md-6 col-lg-6 col-sm-12">
            <h2>Đăng ký</h2>
            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
            {
                //@Html.ValidationSummary()
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.USERNAME)
                    @Html.TextBoxFor(m => m.USERNAME, "", new { @class = "form-control", @placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.USERNAME, "", new { @class = "badge badge-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EMAIL)
                    @Html.TextBoxFor(m => m.EMAIL, "", new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.EMAIL, "", new { @class = "badge badge-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PASSWORD)
                    @Html.PasswordFor(m => m.PASSWORD, new { @class = "form-control", @placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.PASSWORD, "", new { @class = "badge badge-danger" })
                </div>
                <div class="form-group">
                    @if (ViewBag.error != null)
                    {
                        <div>
                            <span class="badge badge-danger">@ViewBag.error</span>
                        </div>
                    }
                    <button type="submit" name="submit" class="btn btn-danger form-control">
                        Register
                    </button>
                </div>
            }
        </div>
        <div class="col-md-3 col-lg-3 col-sm-0"></div>
    </div>
</div>