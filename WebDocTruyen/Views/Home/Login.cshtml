@model WebDocTruyen.Models.USER
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        .form-control {
            width: 100%;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col">
            <ul class="list-inline" style="padding-top:15px;">
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li><i class="fa fa-angle-double-right" aria-hidden="true"></i></li>
                <li>@Html.ActionLink("Đăng nhập", "Login", "Home")</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-lg-3 col-sm-0"></div>
        <div class="col-md-6 col-lg-6 col-sm-12">
            <h1>Đăng nhập</h1>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.USERNAME)
                    @Html.TextBoxFor(m => m.USERNAME, "", new { @class = "form-control", @placeholder = "Username", @width = 300 })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.PASSWORD)
                    @Html.PasswordFor(m => m.PASSWORD, new { @class = "form-control", @placeholder = "Password" })
                </div>

                <div class="form-group text-right">
                    <a href="/Home/Login" style="margin-right: 20px">Quên mật khẩu</a>
                    @Html.ActionLink("Đăng ký mới", "Register", "Home")
                </div>


                <button type="submit" name="submit" class="btn btn-warning form-control btn-login-others">
                    Login
                </button>

            }
        <div class="form-group">
            <button class="btn btn-primary form-control btn-login-others">
                Đăng nhập bằng Facebook
            </button>
            <button class="btn btn-danger form-control btn-login-others">
                Đăng nhập bằng Google
            </button>
        </div>

            <div class="form-group">

            </div>
        </div>
        <div class="col-md-3 col-lg-3 col-sm-0"></div>
    </div>
</div>
